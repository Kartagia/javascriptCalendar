{
	"compilerOptions": {
		"target": "ESNext",
		"module": "NodeNext",
		"experimentalDecorators": true,
		"lib": [
			"es6",
			"es2020"
		],
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"moduleResolution": "NodeNext"
	},
	"include": [
		"src"
	],
	"exclude": [
		"./node_modules/",
		"./test/",
		"./dist/"
	]
}